<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document" inherit_id="account.report_invoice_document" priority="1">
            <xpath expr="//div[@id='informations']/div[@name='invoice_date']" position="after">
                <div class="col-auto mw-100 mb-2" t-if="o.print_date and o.state != 'draft'" name="print_date">
                    <strong>Print Date:</strong>
                    <p class="m-0" t-field="o.print_date" t-options="{'widget': 'date', 'format': 'dd. MM. yyyy'}" />
                </div>
            </xpath>
        </template>
    </data>
</odoo>
