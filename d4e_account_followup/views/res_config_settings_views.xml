<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='analytic']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" title="Followups reports document source visibility" groups="account.group_account_user">
                        <div class="o_setting_left_pane">
                            <field name="followup_source_doc_visibility" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="followup_source_doc_visibility" />
                            <div class="text-muted">
                                Allows you to see the document source in the followups reports
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
